<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div>
    <h2><%= link_to blog_post.title, blog_post %></h2>
    <% if blog_post.draft? %>
      <div class="bg-gray-100 p-2 rounded text-gray-900">
        draft
      </div>
    <% elsif blog_post.scheduled? %>
      <div class="bg-blue-100 p-2 rounded text-blue-900">
        scheduled
      </div>
    <% end %>
    <%= blog_post.body %>
    <div>
      <%= blog_post.published_at %>

    </div>
  </div>
<% end %>
